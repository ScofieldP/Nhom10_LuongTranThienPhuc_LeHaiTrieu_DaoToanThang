<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:padding="4dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/smaill_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/profile"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/tvReceiver"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/tvReceiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/item_receiver"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintWidth_max="wrap"
        android:textSize="13dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/smaill_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75"/>
    
    <TextView
        android:id="@+id/tvDatetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:text="12:00pm"
        app:layout_constraintStart_toStartOf="@id/tvReceiver"
        app:layout_constraintTop_toBottomOf="@id/tvReceiver"/>

    <ImageView
        android:id="@+id/feelingReceiver"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tvReceiver"
        app:layout_constraintEnd_toEndOf="@+id/tvReceiver"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toEndOf="@+id/tvReceiver"
        app:srcCompat="@drawable/ic_fb_love" />

</androidx.constraintlayout.widget.ConstraintLayout>